@page "{category?}"
@model AgoraFE.Pages.CategoryModel
@{
}


<h1>@Model.Category</h1>

<div class="main-content-background">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th colspan="3">Forumindex</th>
                    </tr>
                    <tr>
                        <th>Subject</th>
                        <th>Date posted</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model.Posts)
                    {
                        <tr>
                            <td><a href="/Post/@Model.Category/@post.Id"></a> <br /> <div class="pt-4"><i>@post.Text</i></div></td>
                            <td>posted by <a href="/Profile/@post.Author">@post.Author</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

