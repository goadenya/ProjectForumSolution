@page "{category?}"
@model AgoraFE.Pages.CategoryModel
@{
}

<style>
    td {
        word-wrap: break-word
    }
</style>

<div class="main-content-background">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th colspan="3">Forumindex: @Model.Category</th>
                    </tr>
                    <tr>
                        <th>Subject</th>
                        <th>Date posted</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Posts != null)
                    {
                        @foreach (var post in Model.Posts)
                        {
                            <tr>
                                <td style="max-width: 400px;"><a href="/Post/@Model.Category/@post.id">@post.headline</a> <br /> 
                                    <div @*class="hide-text-part"*@>
                                        <p>
                                            @Model._tools.ShortenText(post.text, 25)
                                        </p>
                                    </div>
                                </td>
                                <td>posted by <a href="/Profile/@post.author">@post.author</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        
    </div>
</div>
