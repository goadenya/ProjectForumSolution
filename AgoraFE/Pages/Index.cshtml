<div class="main-content-background">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <table class="table table-striped">
                <thead>
                    <tr >
                        <th colspan="3">Forumindex</th>
                    </tr>
                    <tr>
                        <th>Subforum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td><a href="/Category/@category.name"><strong>@category.name</strong></a> <br /> <div class="pt-4"><i>@category.description</i></div></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>