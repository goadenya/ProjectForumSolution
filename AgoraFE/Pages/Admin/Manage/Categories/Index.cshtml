@page
@model AgoraFE.Pages.Admin.Manage.Categories.IndexModel
@{
}


<div class="main-content-background">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th colspan="3">Subforums</th>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td><a href="/Category/@category.name"><strong>@category.name</strong></a></td>
                            <td>@category.description</td>
                            <td>
                                @*<a asp-page="./Edit" asp-route-id="@category.id">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@category.id">Details</a> |*@
                                <a asp-page="./Delete" asp-route-id="@category.id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="pl-4 pb-4">
        <a class="btn btn-primary" href="/Admin/Manage/Categories/Create">Add new</a>
    </div>
</div>